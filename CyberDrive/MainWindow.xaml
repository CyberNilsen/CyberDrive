<Window x:Class="CyberDrive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberDrive"
        mc:Ignorable="d"
        Title="CyberDrive" Height="250" Width="400">
    <StackPanel Margin="20">
        <PasswordBox Name="PasswordInput"/>
        <Button Content="Create Encrypted VHD" Click="CreateVault_Click" Margin="5"/>
        <Button Content="Unlock Vault" Click="UnlockVault_Click" Margin="5"/>
        <Button Content="Lock Vault" Click="LockVault_Click" Margin="5"/>
    </StackPanel>
</Window>
